<h1>Listing events</h1>

<table>
  <tr>
    <th>Calendar</th>
    <th>Summary</th>
    <th>Location</th>
    <th>Notes</th>
    <th>Start</th>
    <th>End</th>
    <th>Uid</th>
  </tr>

<% for event in @events %>
  <tr>
    <td><%=h event.calendar_id %></td>
    <td><%=h event.summary %></td>
    <td><%=h event.location %></td>
    <td><%=h event.notes %></td>
    <td><%=h event.start %></td>
    <td><%=h event.end %></td>
    <td><%=h event.uid %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

